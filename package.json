{
  "name": "bq-studio",
  "version": "0.1.0",
  "description": "AI-Powered Publishing House App Plugin for FictionLab",
  "main": "dist/main/src/main/app.js",
  "author": "BQ Studio Team",
  "license": "proprietary",
  "repository": {
    "type": "git",
    "url": "https://github.com/RLRyals/BQ-Studio.git"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "tsc -p tsconfig.main.json --noEmitOnError false && vite build && electron-builder",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:plugin": "npm run build:plugin:clean && npm run build:plugin:main && npm run build:plugin:renderer && npm run build:plugin:package",
    "build:plugin:clean": "node -e \"require('fs-extra').removeSync('dist-plugin')\"",
    "build:plugin:main": "tsc -p tsconfig.plugin.json",
    "build:plugin:renderer": "vite build --mode plugin",
    "build:plugin:package": "node scripts/package-plugin.js",
    "install:plugin:local": "node scripts/install-plugin-local.js",
    "watch:plugin": "tsc src/plugin-entry.ts --outDir dist-plugin --module commonjs --target es2020 --esModuleInterop --skipLibCheck --resolveJsonModule --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "docx": "^8.5.0",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.554.0",
    "markdown-it": "^14.1.0",
    "marked": "^17.0.1",
    "openai": "^4.70.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-grid-layout": "^1.5.2",
    "react-router-dom": "^7.9.6",
    "simple-git": "^3.25.0",
    "zustand": "^4.5.0"
  },
  "optionalDependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.11.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/react-grid-layout": "^1.3.6",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.1",
    "wait-on": "^7.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "com.bqstudio.app",
    "productName": "BQ Studio",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    }
  }
}
