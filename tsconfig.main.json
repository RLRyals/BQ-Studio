{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "outDir": "dist/main",
    "jsx": "preserve",
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/main/**/*", "src/core/**/*", "src/types/**/*", "src/services/**/*"],
  "exclude": ["node_modules", "dist", "src/renderer", "src/tests"]
}
